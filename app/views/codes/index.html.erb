	<article class="clearfix">
		<p><em><%= @codes.total_entries %> ICD-9 Diagnosis Codes Found</em></p>
		
		<ol class="searchResults">

			<% @codes.each do |code| %>
  			<li>
				<%= link_to raw('<h3>'+code.code+'</h3>'+'<p>'+code.short+'</p>'), code %>
			</li>
			<% end %>
			
		</ol>
		
		<%= will_paginate @codes %>
	</article>
