	<section class="searchbox highlight">
		<!-- Application Request Routing needs the HTML attributes in this order -->
		<form action="/codes" method="get" class="searchform show" accept-charset="UTF-8">
		  <%= label_tag nil, 'Search for ICD-9 codes or keywords' %>
		  <%= text_field_tag :search, params[:search], :autofocus => '', 
			:placeholder => 'Search for ICD-9 codes or keywords', :class => 'show',
			:disabled => true %>
		  <%= button_tag 'Search', :class => 'button cta search', :name => nil %>
		</form>
		
	</section><!-- End of .search section -->

	<article class="clearfix">
		<p><%= link_to 'Back to ICD-9 Codes', :back, :class => 'iconbefore back' %></p>
		<h3>ICD9 Code for <%= @code.long %></h3>
		<p><span class="code"><%= @code.code %></span></p>
		<p>Short description: <%= @code.short %><p>
	</article>